{
  "name": "ark-js",
  "version": "1.0.0",
  "description": "Alternate Reality Kit",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:modernserf/ark-js.git"
  },
  "author": "",
  "license": "MIT",
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-2"
    ],
    "env": {
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "standard",
    "plugins": [
      "react"
    ],
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "quotes": [
        2,
        "double"
      ],
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "indent": [
        2,
        4
      ],
      "react/jsx-uses-react": [
        2
      ],
      "react/jsx-no-undef": 2,
      "react/jsx-uses-vars": 2
    }
  },
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "debounce": "^1.0.0",
    "localforage": "^1.4.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-hyperscript": "^2.2.2",
    "react-redux": "^4.3.0",
    "redux": "^3.2.1",
    "redux-saga": "^0.9.5",
    "uuid": "^2.0.1",
    "whatwg-fetch": "^0.11.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.8",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-preset-stage-2": "^6.3.13",
    "css-loader": "^0.23.1",
    "eslint": "^2.4.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-react": "^4.2.3",
    "eslint-plugin-standard": "^1.3.1",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.8.1",
    "postcss-loader": "^0.8.0",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.13",
    "webpack-dev-server": "1.14.0",
    "worker-loader": "^0.7.0"
  }
}
